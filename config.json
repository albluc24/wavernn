{
    "dataset": "ljspeech",
    "audio": {
        "sampling_rate": 22050,
        "max_db_level": 100,
        "ref_db_level": 20,
        "win_length": 1100,
        "hop_length": 275,
        "n_fft": 2048,
        "n_mels": 80,
        "fmin": 80,
        "num_bits": 10
    },
    "model": {
        "conditioning_rnn_size": 128,
        "audio_embedding_dim": 256,
        "rnn_size": 896,
        "fc_size": 1024
    },
    "training": {
        "batch_size": 32,
        "num_steps": 150000,
        "sample_frames": 24,
        "learning_rate": 4e-4,
        "lr_scheduler": {
            "step_size": 25000,
            "gamma": 0.5
        },
        "checkpoint_interval": 25000,
        "num_workers": 8
    }
}